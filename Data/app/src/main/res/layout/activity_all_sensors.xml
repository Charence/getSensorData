<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="420dp"
    android:layout_height="180dp" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/ink6"
    tools:context="com.mycompany.data.AllSensors">

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/start"
        android:background="@drawable/save_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="START!"
        android:textColor="@drawable/text"
        android:textSize="25dp"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="STOP!"
        android:id="@+id/stop"
        android:layout_gravity="center"
        android:layout_above="@+id/save"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@drawable/text"
        android:background="@drawable/save_button"
        android:layout_marginBottom="5dp"
        android:onClick="stop"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="SAVE!"
        android:id="@+id/save"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/stop"
        android:layout_alignStart="@+id/stop"
        android:background="@drawable/save_button"
        android:textColor="@drawable/text"
        android:onClick="saveData"/>
</RelativeLayout>
